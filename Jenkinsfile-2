pipeline {
    agent any
    options{
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: "10"))
        timeout(time: 1, unit: "MINUTES")
    }
    environment {
        env="dev"
    }
    stages {
        stage('Build Docker Image For Tests') {
            steps {
                sh 'docker build -t pipeline-2-${env} .'
            }
        }
        stage('List Of Docker Images') {
            steps {
                sh 'docker images ls'
            }
        }
    }
}
